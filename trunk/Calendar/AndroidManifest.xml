<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.utsa.calendar"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.utsa.calendar.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.utsa.calendar.WeeklyViewActivity"
            android:label="@string/title_activity_weekly_view" >
        </activity>
        <activity
            android:name="edu.utsa.calendar.DailyViewActivity"
            android:label="@string/title_activity_daily_view" >
        </activity>
        <activity
            android:name="edu.utsa.calendar.MonthlyViewActivity"
            android:label="@string/title_activity_monthly_view" >
        </activity>
        <activity
            android:name="edu.utsa.calendar.AgendaViewActivity"
            android:label="@string/title_activity_agenda_view" >
        </activity>

        <activity
            android:name="edu.utsa.calendar.AgendaDetailsActivity"
            android:label="@string/title_activity_agenda_details" >
        </activity>
        
        <activity
            android:name="edu.utsa.calendar.NewEventActivity"
            android:label="@string/title_activity_new_event" >
        </activity>
        <activity
            android:name="edu.utsa.calendar.NewCategoryActivity"
            android:label="@string/title_activity_new_category" >
        </activity>
    </application>

</manifest>
